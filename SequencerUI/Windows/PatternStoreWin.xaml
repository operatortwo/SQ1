<Window x:Class="PatternStoreWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SequencerUI"
        mc:Ignorable="d"
        Title="Pattern Store" Height="400" Width="300" WindowStyle="ToolWindow" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <Button x:Name="btnLoadPattern" Content="Load pattern" HorizontalAlignment="Left" Margin="29,19,0,0" VerticalAlignment="Top" Width="88"/>
        <ListBox x:Name="lbPatternList" HorizontalAlignment="Left" VerticalAlignment="Top" Width="231" Height="272" Margin="29,69,0,0" DisplayMemberPath="Label"/>
        <CheckBox x:Name="cbAudition" Content="Play" HorizontalAlignment="Left" Margin="150,21,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="rbVoice" Content="Voice" HorizontalAlignment="Left" Margin="213,22,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <RadioButton x:Name="rbDrum" Content="Drum" HorizontalAlignment="Left" Margin="213,43,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
